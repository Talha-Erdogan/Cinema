@model Cinema.Web.Models.User.AddViewModel
@{
    ViewData["Title"] = "User Add";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong> Add </strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">User Name</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Password</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Name</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Surname</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Surname, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Mail</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Mail, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(m => m.Mail, null, new { @class = "help-block text-danger" })
                        </div>

                        <label class="col-md-2 col-form-label">Profile</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.ProfileId, Model.ProfileSelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.ProfileId, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit">
                                <i class="fa fa-dot-circle-o"></i> Save
                            </button>
                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/User/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                        </div>
                    </div>

                }


            </div>

        </div>

    </div>
    <!-- /.col-->
</div>


